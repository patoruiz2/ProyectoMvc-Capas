<body>
    <div class="content">
        <div class="">
            <h2 class="text-center mb-4 card-header">Listado de usuarios</h2>
            @if (@ViewBag.Message != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-4 mb-4" role="alert">
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <table style="border-radius: 10px" class="table-secondary table-bordered border-primary mx-auto col-lg-10 main-section">
                    <thead class="table-dark">
                        <tr class="text-center">
                            <th scope="">Legajo</th>
                            <th scope="">Email</th>
                            <th scope="">Nombre Completo</th>
                            <th scope="">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var items in Model)
                        {
                            if (items.idRol != 1)
                            {

                                <tr id="@items.id">
                                    <th scope="row">@items.id</th>
                                    <td>@items.nombre</td>
                                    <td>@items.email</td>
                                    <td>


                                        <div class="btn btn-outline-danger">
                                            @Html.ActionLink("Eliminar", "Delete", new { id = items.id })
                                        </div>


                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <div class="btn btn-outline-success">
                                            @Html.ActionLink("Modificar", "Modify", new { id = items.id, @class = "btn-outline-success" })
                                        </div>
                                    </td>

                                </tr>
                            }
                        }

                    </tbody>
                </table>
            }

        </div>
      
    </div>


</body>


