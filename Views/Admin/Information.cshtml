<body>
    <div class="content">
        <div class="card col-7 mx-auto">
            <h1 class="card-header text-center">Información</h1>
            <div class="card-body">
                <div class="text-center">
                    <i class="far fa-user-circle" style="font-size: 150px; margin-bottom: 20px;"></i>
                </div>
                <div class="form-label">
                    @Html.LabelFor(x => x.nombre, "Nombre de usuario:", new { @class = "text-secondary" })
                    <div class="text-capitalize">
                        @Html.DisplayFor(x => x.nombre)
                    </div>
                </div>

                <div class="form-label">
                    @Html.LabelFor(x => x.email, "Nombre de usuario:", new { @class = "text-secondary" })
                    <div class="">
                        @Html.DisplayFor(x => x.email)
                    </div>
                </div>

                <div class="form-label mt-3">
                    <label class="text-secondary">Tipo de usuario: </label>
                    <div>
                        <label>Administrador</label>
                    </div>
                </div>

                <div class="form-label mt-3">
                    <label class="text-secondary">Instituto: </label>
                    <div>
                        <label>Nuestra Señora de la Paz</label>
                    </div>
                </div>

                <div class="form-label mt-3">
                    <label class="text-secondary">Carrera: </label>
                    <div>
                        <label>Analista de Sistemas de Información</label>
                    </div>
                </div>

                <div class="form-label mt-3">
                    <label class="text-secondary">Materia: </label>
                    <div>
                        <label>Programacion V</label>
                        <a style="min-width: 150px; border-radius: 10px" class="btn btn-outline-info float-end" target="_blank" href="http://superiorlapaz.edu.ar/analista-de-sistemas/">Visitar NSLP</a>
                    </div>
                </div>

            </div>
            @*<div class="form-label">
               @Html.LabelFor(x => x.idRol, "Tipo de usuario: (1 = Administrador; 2=Estudiante) ", new { @class = "text-primary" })
                <div class="text-capitalize">
                    @Html.DisplayFor(x => x.idRol)
                </div>
            </div>*@
        </div>
    </div>
</body>