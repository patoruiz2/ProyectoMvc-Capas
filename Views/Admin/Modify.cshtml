@model ET.User
@{ ViewBag.Title = "Modify";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link href="~/Content/Site.css" rel="stylesheet" />
<!-- Los iconos tipo Solid de Fontawesome-->
<link rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
<script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>



<!--Sidebar inicio-->
<div class="sidebar">
    <center>
        <img src="https://images.vexels.com/media/users/3/131263/isolated/preview/af6816ec67ec51da6b275a4aa08d236c-icono-de-c-iacute-rculo-de-bloqueo-by-vexels.png" id="usuario" />
        <h4>Administración</h4>
    </center>
    @*<a class="navbar-brand"> @Html.ActionLink("Alta de Alumno", "AddUser", "Admin", new { area = "" }, new { @class = "navbar-brand" }) </a>*@

    <a href="/Admin"> <i class="fas fa-users"></i> <span> Listado </span> </a>
    <a href="/Admin/AddUser"> <i class="fas fa-user-plus"></i> <span> Alta de alumno </span> </a>
    
    <a href="/Admin/Settings"> <i class="fas fa-cog"></i> <span> Opciones </span> </a>
    <a href="/Admin/Information"> <i class="fas fa-info"></i> <span> Información </span> </a>
    
</div>
<!--Sidebar final-->

<div class="content">
    @using (Html.BeginForm())
    {
@Html.ValidationSummary(true, "", new { @class = "text-danger", required = "" })
                @Html.HiddenFor(x => x.id)

                                <div class="col-6 card p-4 mx-auto mt-5 d-block">
                                    <h2 class="text-center card-header mb-5">       Modificar Usuario</h2>
                                    <form>
                                        <div class="text-center">
                                            <h5>Email</h5>
                                            <div class="form-group ">
                                                @Html.EditorFor(x => x.nombre, new { @style = "min-width: 500px" })
                                                @Html.ValidationMessageFor(x => x.nombre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <h5>Nombre</h5>
                                            <div class="form-group">
                                                @Html.EditorFor(x => x.email, new
                                                {
                                                    @class = "form-control mb-4",
                                                    @style = "min-width: 499px"
                                                }
                                                     )
                                                @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="float-center">

                                            <a href="/Admin" class="btn btn-outline-secondary mr-4">Volver</a>

                                            <button type="button" class="btn btn-success btn-lg float-end"
                                                    data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                Guardar cambios
                                            </button>
                                        </div>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Desea confirmar los cambios?</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <button type="submit" value="Save" class="btn btn-primary btn-success">Confirmar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </form>

                                </div>}

</div>




